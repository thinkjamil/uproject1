<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.jam.popmovies.DetailedActivityFragment"
    android:id="@+id/detailed_fragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_placeholder"
        android:id="@+id/original_title_textView_detail"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/poster_imageView_detail"
        android:layout_below="@id/original_title_textView_detail"
        android:layout_alignParentLeft="true"
        android:src="@drawable/placeholder"
        android:maxHeight="200dp"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/released_placeholder"
        android:id="@+id/releae_date_textView_detail"
        android:layout_below="@id/poster_imageView_detail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/rating_placeholder"
        android:id="@+id/user_rating_textView_detail"
        android:layout_below="@+id/poster_imageView_detail"
        android:layout_alignRight="@id/poster_imageView_detail"
        android:layout_alignEnd="@id/poster_imageView_detail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/plot_placeholder"
        android:gravity="center"
        android:id="@+id/plot_textView_detail"
        android:layout_below="@id/releae_date_textView_detail"/>
</RelativeLayout>
